{
  "compilerOptions": {
    "strict": true,
    "inlineSourceMap": true,

    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}